<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UchihaTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/uchihaPrimary</item>
        <item name="colorPrimaryDark">@color/uchihaPrimaryDark</item>
        <item name="colorAccent">@color/uchihaAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="SenjuTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.Main" parent="AppTheme" />

</resources>
